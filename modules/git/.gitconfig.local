# user.name and user.email is not set on purpose
# it's gonna be set per repository via set_git_identity function

[alias]
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    up = !git fetch --all --tags --prune && git merge --ff-only @{u}
[core]
    excludesfile = ~/.gitignore.global
[push]
    default = simple
